{
  "name": "eslint-config-radiofrance-typescript",
  "version": "1.0.3",
  "description": "ESLint shareable config for TypeScript at Radio France",
  "license": "CECILL-B",
  "repository": "radiofrance/eslint-config-radiofrance-typescript",
  "author": {
    "name": "Radio France",
    "email": "opensource@radiofrance.com",
    "url": "www.radiofrance.fr"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "ava"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "❤️",
    "space",
    "spaces",
    "eslintconfig",
    "xo",
    "code",
    "quality",
    "style",
    "lint",
    "linter",
    "jscs",
    "jshint",
    "jslint",
    "eslint",
    "validate",
    "code style",
    "standard",
    "strict",
    "check",
    "checker",
    "verify",
    "enforce",
    "hint",
    "simple"
  ],
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint-config-xo": "^0.32.1",
    "eslint-config-xo-typescript": "^0.31.0",
    "eslint-plugin-promise": "^4.1.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "ava": "^3.7.1",
    "eslint": "^7.5.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": ">=2.29.0",
    "eslint": ">=6.8.0",
    "typescript": ">=3.5.3"
  },
  "eslintConfig": {
    "extends": "xo/esnext",
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "warn",
      "no-console": "error",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "next"
        }
      ],
      "prefer-promise-reject-errors": "warn"
    }
  }
}
